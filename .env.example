# =========================================== #
#           Aurora Bot Configuration          #
# =========================================== #

# =========================================== #
#           Discord Bot Configuration         #
# =========================================== #
# Получите токен бота на https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# ID основного сервера (гильдии), где будут регистрироваться slash-команды
GUILD_ID=your_guild_id_here

# =========================================== #
#         Discord OAuth2 Configuration        #
# =========================================== #
# Получите на https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# =========================================== #
#           Dashboard Configuration           #
# =========================================== #
# URL вашего приложения (например, https://your-app.vercel.app)
# Для локальной разработки: http://localhost:3000
BASE_URL=https://your-app-name.vercel.app

# Секретный ключ для сессий (используйте сложный случайный ключ)
SESSION_SECRET=your_session_secret_here

# =========================================== #
#           Lavalink Configuration            #
# =========================================== #
# Настройки для музыкальных команд (опционально)
LAVALINK_HOST=localhost
LAVALINK_PORT=2333
LAVALINK_PASSWORD=your_lavalink_password

# =========================================== #
#             Server Configuration            #
# =========================================== #
# Порт для локального запуска (на Vercel будет использован системный порт)
PORT=3000

# =========================================== #
#         Additional Configuration            #
# =========================================== #
# Канал приветствия (ID канала для сообщений о новых участниках)
WELCOME_CHANNEL_ID=1399362209703792791

# =========================================== #
#           Environment Configuration         #
# =========================================== #
# Указывает, что приложение запущено в продакшене (опционально)
NODE_ENV=production